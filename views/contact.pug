extends base.pug

block style
    style 
        include ../static/styles/contact.css

block content
    .container
        h1 Get In Touch
        div
            i.fa.fa-phone(aria-hidden='true')
            | Phone: +91 87097 88098
        div
            i.fa.fa-envelope-o(aria-hidden='true')
            | Email: 
            a(href='mailto:muskanrahul@shadi.com') muskanrahul@shadi.com
        div
            i.fa.fa-map-marker(aria-hidden='true')
            | Address: Muskan Colony, D Block, Gandhi Maidan, Gali No 3, INDIA
    .form
        form(action='/api/contact' method="post")
            .outer-box
                .left-box
                    input(type='text' name='name' id='' placeholder='Your Name*' required='')
                    input(type='email' name='email' id='' placeholder='Your Email*' required='')
                    input(type='tel' name='Phone' id='' placeholder='Your Phone*' required='')
                .right-box
                    textarea(name='message' id='' placeholder='Your Message*')
            div
                button Submit
